	<select id="getReservationListByUNumber"
		resultMap="reservationMap">
		SELECT R.*, P.P_NAME
		FROM RESERVATION R LEFT OUTER JOIN PLAY P ON R.P_NUMBER = P.P_NUMBER
		WHERE R.U_NUMBER = #{unumber}
	</select>

	<update id="updateCancelState" parameterType="int">
		UPDATE RESERVATION SET R_CANCELSTATE = 1
		WHERE R_NUMBER = #{rNumber} AND U_NUMBER = #{uNumber}
	</update>

	<delete id="deleteTicketInfo">
		DELETE FROM RESERVATION
		WHERE rcancelState = 1
		AND (rticketFirst IS NOT NULL OR rticketSecond IS NOT NULL OR
		rticketThird IS NOT NULL OR rticketFourth IS NOT NULL)

	</delete>
</mapper>